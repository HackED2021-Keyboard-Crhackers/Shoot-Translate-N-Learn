<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="15"
        android:layout_marginEnd="2dp">

        <TextView
            android:id="@+id/original_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Word:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/target_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="5dp"
            android:text="Language:"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/translated_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Translation:"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="0dp"
        android:layout_weight="75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/original_word_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:padding="5dp"
            android:text="Apple"
            android:singleLine="true"
            android:textColor="@color/deep_purple"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/target_language_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:padding="5dp"
            android:text="French"
            android:singleLine="true"
            android:textColor="@color/deep_purple"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/translated_word_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/happy_monkey"
            android:padding="5dp"
            android:text="Pomme"
            android:singleLine="true"
            android:textColor="@color/deep_purple"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="7"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/wordSpeakButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_baseline_volume_up_24" />
    </LinearLayout>



</LinearLayout>